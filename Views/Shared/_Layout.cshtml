<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ArticleManagement.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ArticleManagement.Web.styles.css" asp-append-version="true" />

    <script src="~/js/toast.js"></script>
</head>
<body>
    @if (ViewBag.HideMenu == null)
    {
        <header>
            <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom shadow-sm mb-3">
                <div class="container-fluid">
                    <!-- Logo -->
                    <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                        ArticleManagement.Web
                    </a>

                    <!-- Botón hamburguesa en móviles -->
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                            aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <!-- Contenido -->
                    <div class="collapse navbar-collapse" id="mainNavbar">
                        <!-- Menú principal -->
                        <ul class="navbar-nav me-auto mb-2 mb-sm-0">
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Articles" asp-action="ArticleList">Gestión artículos</a>
                            </li>
                        </ul>

                        <!-- Menú derecho -->
                        <ul class="navbar-nav ms-auto">

                            <li class="nav-item">
                                <a class="nav-link text-danger fw-semibold" asp-area="" asp-controller="Auth" asp-action="Logout">
                                    Cerrar sesión
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
    }
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - ArticleManagement.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    @{
        var toastMessage = TempData.Peek("ToastMessage") as string;
        var toastType = TempData.Peek("ToastType") as string ?? "info";
    }

    @if (!string.IsNullOrEmpty(toastMessage))
    {
        <div class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 9999">
            <div class="toast align-items-center text-danger border-0 show" role="alert">
                <div class="d-flex">
                    <div class="toast-body">
                        @toastMessage
                    </div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto"
                            data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
            </div>
        </div>

        <script>
            document.addEventListener("DOMContentLoaded", function () {
                var toastElList = [].slice.call(document.querySelectorAll('.toast'));
                toastElList.map(function (toastEl) {
                    new bootstrap.Toast(toastEl, { delay: 5000 }).show();
                });
            });
        </script>

        @TempData.Remove("ToastMessage");
        @TempData.Remove("ToastType");

    }

</body>
</html>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        window.showToast = function (message, type = 'success') {
            var toastId = 'toast' + Date.now();

            var toastHtml = `
                <div id="${toastId}" class="toast align-items-center text-bg-${type} border-0" role="alert" aria-live="assertive" aria-atomic="true">
                  <div class="d-flex">
                    <div class="toast-body">
                      ${message}
                    </div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Cerrar"></button>
                  </div>
                </div>`;

            var container = document.getElementById('toastContainer');
            container.insertAdjacentHTML('beforeend', toastHtml);

            var toastElement = new bootstrap.Toast(document.getElementById(toastId), { delay: 4000 });
            toastElement.show();

            document.getElementById(toastId).addEventListener('hidden.bs.toast', function () {
                this.remove();
            });
        }
    </script>
}
