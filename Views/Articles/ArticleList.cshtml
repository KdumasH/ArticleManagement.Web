@using ArticleManagement.Web.Models.Articles
@using ArticleManagement.Web.Models.Shared
@model PaginatedResponse<ArticleViewModel>

@{
    ViewData["Title"] = "ArticleList";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="mb-0">Gestión de artículos</h3>
        <a asp-action="Create" class="btn btn-primary rounded px-4">
            Crear nuevo
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th class="d-none">ID</th>
                    <th>Autor</th>
                    <th>Título</th>
                    <th>Fecha publicación</th>
                    <th class="text-center" style="min-width: 160px;">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td class="d-none">@item.Id</td>
                        <td>@item.Author</td>
                        <td>@item.Title</td>
                        <td>@item.PublishedDate.ToString("dd/MM/yyyy hh:mm tt")</td>
                        <td class="text-center">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary rounded me-1" title="Ver detalle">
                                Ver detalle
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning rounded me-1" title="Editar">
                                Editar
                            </a>
                            <button type="button" class="btn btn-sm btn-outline-danger rounded btn-delete" data-id="@item.Id" title="Eliminar">
                                Eliminar
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    @inject Microsoft.AspNetCore.Antiforgery.IAntiforgery antiforgery

    <script>
           var token = '@antiforgery.GetAndStoreTokens(Context).RequestToken';

            $(function () {
            $(".btn-delete").click(function () {
                var id = $(this).data("id");
                var row = $("tr[data-id='" + id + "']");

                if (confirm("¿Está seguro de eliminar este artículo?")) {
                    $.ajax({
                        url: '@Url.Action("DeleteConfirmed", "Articles")',
                        type: 'POST',
                        data: { id: id },
                        headers: {
                            'RequestVerificationToken': token
                        },
                        success: function (response) {
                            if (response.success === false) {
                                mostrarToast("Error: " + response.message, "danger");
                            } else {
                                mostrarToast(response.message, "success");
                                row.fadeOut(500, function () {
                                    $(this).remove();
                                });
                                setTimeout(function () {
                                    location.reload();
                                }, 2000);
                            }
                        },
                        error: function (xhr) {
                            try {
                                const res = JSON.parse(xhr.responseText);
                                if (res.toastMessage) {
                                    mostrarToast(res.toastMessage, res.toastType || "danger");
                                } else {
                                    mostrarToast("Ocurrió un error al intentar eliminar el artículo.", "danger");
                                }
                            } catch {
                                mostrarToast("Error desconocido al conectarse con el servicio.", "danger");
                            }
                        }
                    });
                }
            });
        });
    </script>
}